<div id="main">
  <div class="form-group">
    <div id="form_field">
      <%= form_tag profile_address_update_path(@address), method: :patch do %>
        <label><%= label_tag :address_name %></label><br>
        <input class="form-control"<%= text_field_tag :address_name, @address.address_name %>
        <br>
        <label><%= label_tag :address %></label><br>
        <input class="form-control"<%= text_field_tag :address, @address.address %>
        <br>
        <label><%= label_tag :city %></label><br>
        <input class="form-control"<%= text_field_tag :city, @address.city %>
        <br>
        <label><%= label_tag :state %></label><br>
        <input class="form-control"<%= text_field_tag :state, @address.state %>
        <br>
        <label><%= label_tag :zip %></label><br>
        <input class="form-control"<%= text_field_tag :zip, @address.zip %>
        <br>
        <input class="form-control"<%= submit_tag 'Update Address' %>
      <% end %>
    </div>
  </div>
</div>

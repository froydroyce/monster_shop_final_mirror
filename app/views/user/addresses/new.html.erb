<%= form_tag profile_addresses_path do %>
  <%= label_tag :address_name %>
  <%= text_field_tag :address_name %>

  <%= label_tag :address %>
  <%= text_field_tag :address %>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :zip %>
  <%= text_field_tag :zip %>

  <%= submit_tag 'Create New Address' %>
<% end %>
